@model Market.MVC.Models.ProductViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShortTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShortTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UnitTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnitTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Count)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Count)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            @{
                var base64 = Convert.ToBase64String(Model.Image);
                var imgSrc = String.Format("data:image;base64,{0}", base64);
            }
            <img src="@imgSrc" />
        </dd>
    </dl>
</div>
<div>
    <a href='@Url.Action("Edit", "Admin", new { id = Model.Id })' class="btn btn-outline-primary">Edit</a>
    <a asp-action="Index" class="btn btn-outline-primary">Back to list</a>
</div>
